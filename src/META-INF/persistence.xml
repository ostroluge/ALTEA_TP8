<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="ALTEA_TP8">
		<class>model.dto.Team</class>
		<class>model.dto.Coach</class>
		<class>model.dto.Person</class>
		<class>model.dto.Player</class>
		<class>model.dto.Game</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://webtp.fil.univ-lille1.fr:3306/ostrowski" />
			<property name="javax.persistence.jdbc.user" value="ostrowski" />
			<property name="javax.persistence.jdbc.password" value="Ololmysql" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
	</persistence-unit>
</persistence>